{
  "$schema": "https://schema.tauri.app/config/1",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "distDir": "../dist",
    "devPath": "http://localhost:5173"
  },
  "package": {
    "productName": "PlumaMD",
    "version": "0.1.7-beta.1"
  },
  "tauri": {
    "windows": [
      {
        "title": "PlumaMD",
        "width": 1280,
        "height": 800,
        "resizable": true
      }
    ],
    "bundle": {
      "active": true,
      "targets": ["appimage", "deb"],
      "identifier": "com.juanjo.plumamd",
      "icon": [
        "icons/icon.png"
      ]
    },
    "security": {
      "csp": null
    },
    "allowlist": {
      "fs": {
        "readFile": true,
        "writeFile": true,
        "removeFile": true,
        "exists": true,
        "scope": [
          "**"
        ]
      },
      "dialog": {
        "open": true,
        "save": true
      },
      "shell": {
        "all": false,
        "execute": false,
        "scope": []
      }
    }
  }
}
